<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.Region?>

<VBox alignment="CENTER" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jac444.wk4.StudentController">
	<HBox alignment="CENTER" prefHeight="300" xmlns:fx="http://javafx.com/fxml/1">
		<VBox prefWidth = "350" xmlns:fx="http://javafx.com/fxml/1">
			<Label text="File Name: " ></Label>
			<Region prefHeight="5.0"></Region>
			<TextField fx:id="filename_box" promptText="Filename.txt"></TextField>
			<Region prefHeight="10.0"></Region>
			<Label text="Name: "></Label>
			<Region prefHeight="5.0"></Region>
			<TextField fx:id="name_box" promptText="Name" ></TextField>
			<Region prefHeight="10.0"></Region>
			<Label text="Course: "></Label>
			<Region prefHeight="5.0"></Region>
			<TextField fx:id="course_box" promptText="Course"></TextField>
			<Region prefHeight="10.0"></Region>
			<Label  text="Grade: "></Label>
			<Region prefHeight="5.0"></Region>
			<TextField fx:id="grade_box" promptText="Grade"></TextField>
			<Region prefHeight="10.0"></Region>
			<HBox alignment="CENTER" xmlns:fx="http://javafx.com/fxml/1">
				<Button mnemonicParsing="false" onAction="#loadStudent" text="Load"></Button>
				<Region prefWidth="5.0"></Region>
				<Button mnemonicParsing="false" onAction="#saveStudent" text="Save"></Button>
				<Region prefWidth="5.0"></Region>
				<Button mnemonicParsing="false" onAction="#newStudent" text="New"></Button>
				<Region prefWidth="5.0"></Region>
				<Button mnemonicParsing="false" onAction="#editStudent" text="Edit"></Button>
				<Region prefWidth="5.0"></Region>
				<Button mnemonicParsing="false" onAction="#deleteStudent" text="Delete"></Button>
			</HBox>
			<Text fx:id="msg" strokeType="OUTSIDE"/>
		</VBox>
	</HBox>
</VBox>